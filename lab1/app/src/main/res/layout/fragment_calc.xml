<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/WideContent.Horizontal">

        <EditText
            android:id="@+id/arg1_edit_text"
            style="@style/WideContent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/operator_text"
            style="@style/WrapContent" />

        <EditText
            android:layout_width="0dp"
            android:id="@+id/arg2_edit_text"
            style="@style/WideContent"
            android:layout_weight="1"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/result_text"
            style="@style/WrapContent" />
    </LinearLayout>

    <LinearLayout style="@style/WideContent.Horizontal">

        <Button
            android:id="@+id/plus_btn"
            style="@style/WrapContent"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/minus_btn"
            style="@style/WrapContent"
            android:layout_weight="1"
            android:text="-" />

        <Button
            android:id="@+id/mul_btn"
            style="@style/WrapContent"
            android:layout_weight="1"
            android:text="*" />

        <Button
            android:id="@+id/div_btn"
            style="@style/WrapContent"
            android:layout_weight="1"
            android:text="/" />
    </LinearLayout>

    <Button
        android:id="@+id/res_btn"
        style="@style/WideContent"
        android:text="=" />
</LinearLayout>